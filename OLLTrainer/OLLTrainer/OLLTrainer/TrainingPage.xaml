<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OLLTrainer.TrainingPage">
    <StackLayout Orientation="Vertical">
        <Label Text="Scramble:" />
        <Label x:Name="caseScramble" Text="(scramble here)" />

        <Label Text="Execution delay?" />
        <Button Text="None" Clicked="NoExecDelayButtonClicked" />
        <Button Text="Small (&lt;2s)" Clicked="SmallExecDelayButtonClicked" />
        <Button Text="Significant (&gt;2s)" Clicked="SignificantExecDelayButtonClicked" />
        <Button Text="I don't remember it" Clicked="DontRememberButtonClicked" />
        <Label Text="(alg shown here on alg not remembered)" IsVisible="False" />

        <Label x:Name="caseConfidence" Text="placeholder" />
    </StackLayout>
</ContentPage>